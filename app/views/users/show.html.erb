<div class="container px-5 px-sm-0">

  <%= render 'layouts/error_explanation', book: @new_book %>

  <div class="row">

    <div class="col-md-3">
      <!--テンプレートで使っている変数は@userだけじゃない！-->
      <%= render 'tpl', user: @id_user, book: @new_book %>
      <!--@new_bookを使えるようにする記述が必要！！-->
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

      <table class="table table-hover table-inverse">

        <thead>
          <tr>
            <!--imageの分-->
            <th></th>
            <!--title-->
            <th>Title</th>
            <!--opinion-->
            <th>Opinion</th>
            <!--colspan-->
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <!--imageの分-->
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= image_tag book.user.get_profile_image %>
              <% end %>
            </td>
            <!--title-->
            <td><%= link_to book.title , book_path(book.id) %></td>
            <!--opinion-->
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>

      </table>
    </div>

  </div>
</div>








